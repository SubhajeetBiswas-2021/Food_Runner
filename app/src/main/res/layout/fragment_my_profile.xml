<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/orange"
    tools:context=".fragment.MyProfileFragment">

    <ImageView
        android:id="@+id/imgperson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="105dp"
        android:src="@drawable/screenshot_headperson" />

    <TextView
        android:id="@+id/txtname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgperson"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="30dp"
        android:background="#fff3e0"
        android:text="      Enter the Name"
        android:textSize="20dp"
        android:textColor="#212121"
        />

    <TextView
        android:id="@+id/txtphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtname"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:textColor="#212121"
        android:layout_marginRight="30dp"
        android:background="#fff3e0"
        android:text="      Enter the phone number"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txtemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtphone"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:textColor="#212121"
        android:background="#fff3e0"
        android:text="      Enter the Email"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/txtaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtemail"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:textColor="#212121"
        android:background="#fff3e0"
        android:text="      Enter the delivery address"
        android:textSize="20dp"/>

</RelativeLayout>